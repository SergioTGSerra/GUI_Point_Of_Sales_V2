<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.luxrest.gui.Controllers.Dashboard.Modules.Payments.PaymentCashBodyController">
   <HBox>
      <Region />
      <Label styleClass="fontSizeLabelsPayment" text="Valor do pedido" />
      <Region HBox.hgrow="ALWAYS" />
      <Label fx:id="amountPay" styleClass="fontSizeLabelsPayment" text="€"/>
   </HBox>
   <HBox>
      <Region />
      <Label styleClass="fontSizeLabelsPayment" text="Recebido" />
      <Region HBox.hgrow="ALWAYS" />
      <Label fx:id="receive" styleClass="fontSizeLabelsPayment" text="€"/>
   </HBox>
   <HBox>
      <Region />
      <Label styleClass="fontSizeLabelsPayment" text="Troco" />
      <Region HBox.hgrow="ALWAYS"/>
      <Label fx:id="change" styleClass="fontSizeLabelsPayment" text="€"/>
   </HBox>
   <GridPane alignment="CENTER" hgap="20.0" vgap="20.0">
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints vgrow="SOMETIMES" />
         <RowConstraints vgrow="SOMETIMES" />
         <RowConstraints vgrow="SOMETIMES" />
      </rowConstraints>
      <Button onAction="#buttonClicked" styleClass="changeButton" text="0.5€" GridPane.columnIndex="1" />
      <Button onAction="#buttonClicked" styleClass="changeButton" text="1€" GridPane.columnIndex="2" />
      <Button onAction="#buttonClicked" styleClass="changeButton" text="2€" GridPane.columnIndex="3" />
      <Button onAction="#buttonClicked" styleClass="changeButton" text="5€" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button onAction="#buttonClicked" styleClass="changeButton" text="10€" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Button onAction="#buttonClicked" styleClass="changeButton" text="20€" GridPane.columnIndex="3" GridPane.rowIndex="1" />
      <Button onAction="#buttonClicked" styleClass="changeButton" text="50€" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button onAction="#buttonClicked" styleClass="changeButton" text="100€" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Button onAction="#buttonClear" styleClass="changeButton" text="Apagar" GridPane.columnIndex="3" GridPane.rowIndex="2" />
   </GridPane>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="50.0" />
   </padding>
</VBox>